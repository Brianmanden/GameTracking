<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_store_browse.vcss_c" />
	</styles>

	<DOTAStoreBrowsePage class="DashboardPage SafeDashboardPage">


		<Panel id="MainContents">

			<Panel id="SearchOptionsContainer">
				<Panel class="SearchOptionsTitle">
					<Label text="Search" />
				</Panel>

				<Panel id="SearchBox">
					<TextEntry id="SearchTextEntry" placeholder="Enter keywords to search."/>
				</Panel>
				
				<Panel class="SearchOptionsTitle">
					<Label text="Categories" />
				</Panel>
				<Panel id="SearchCategories">
					<!--<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Winter Season" />
					</RadioButton>-->

					<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Treasures" />

						<Panel class="SearchSubCategories">
							<ToggleButton text="Treasures" />
							<ToggleButton text="Charms" />
						</Panel>
					</RadioButton>

					<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Hero Items" />

						<Panel class="SearchSubCategories">
							<DropDown id="HeroDropDown">
								<Label text="ANY" />
							</DropDown>
						</Panel>
					</RadioButton>

					<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Couriers &amp; Wards" />

						<Panel class="SearchSubCategories">
							<ToggleButton text="Couriers" />
							<ToggleButton text="Wards" />
						</Panel>

					</RadioButton>
				
					<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Audio" />

						<Panel class="SearchSubCategories">
							<ToggleButton text="Announcer Packs" />
							<ToggleButton text="Mega-Kill Packs" />
							<ToggleButton text="Music" />
						</Panel>
					</RadioButton>

					<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Tickets" />
					</RadioButton>

					<RadioButton class="SearchCategory" group="search_categories">
						<Label class="SearchCategoryName" text="Misc" />

						<Panel class="SearchSubCategories">
							<ToggleButton text="HUDs" />
							<ToggleButton text="Loading Screens" />
							<ToggleButton text="Cursor Packs" />
							<ToggleButton text="Effigies" />
							<ToggleButton text="Terrain" />
							<ToggleButton text="Weather" />
							<ToggleButton text="Emoticons" />
						</Panel>
					</RadioButton>

				</Panel>

				<Panel class="SearchOptionsTitle">
					<Label text="Options" />
				</Panel>

				<Panel id="SearchOptions">
					<Panel class="RarityChooser">
						<Label text="Rarity:" />
						<Panel id="RarityOptions">
							<TextButton id="AnyRarity" text="Any" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_common" onmouseover="DOTAShowTextTooltip( Common )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_uncommon" onmouseover="DOTAShowTextTooltip( Uncommon )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_rare" onmouseover="DOTAShowTextTooltip( Rare )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_mythical" onmouseover="DOTAShowTextTooltip( Mythical )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_legendary" onmouseover="DOTAShowTextTooltip( Legendary )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_ancient" onmouseover="DOTAShowTextTooltip( Ancient )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_immortal" onmouseover="DOTAShowTextTooltip( Immortal )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_arcana" onmouseover="DOTAShowTextTooltip( Arcana )" onmouseout="DOTAHideTextTooltip()" />
							<Button class="RarityButton ItemRarityBackgroundColor ItemRarity_seasonal" onmouseover="DOTAShowTextTooltip( Seasonal )" onmouseout="DOTAHideTextTooltip()" />
						</Panel>
					</Panel>

					<Panel id="PurchaseOptions">
						<Label text="Available:" />

						<Panel id="TreasureOption" class="PurchaseOption">
							<Label text="In a Treasure" />
							<Panel class="FillWidth" />
							<Panel class="PurchaseOptionValue">
								<RadioButton text="Any" group="treasure_option" selected="true" />
								<Label text="/" />
								<RadioButton text="Yes" group="treasure_option" />
								<Label text="/" />
								<RadioButton text="No" group="treasure_option" />
							</Panel>
						</Panel>

						<Panel id="BattlePassOption" class="PurchaseOption">
							<Label text="Battle Pass Reward" />
							<Panel class="FillWidth" />
							<Panel class="PurchaseOptionValue">
								<RadioButton text="Any" group="battle_pass_option" selected="true" />
								<Label text="/" />
								<RadioButton text="Yes" group="battle_pass_option" />
								<Label text="/" />
								<RadioButton text="No" group="battle_pass_option" />
							</Panel>
						</Panel>
						
					</Panel>

				</Panel>
			</Panel>
			

			<Panel id="SearchResultsContainer">
				<Panel id="SearchResultsHeader">
					<Label class="SearchResultsCount" text="Found {d:search_result_count} Results" />
					<Panel class="FillWidth" />
					<Label class="SortByLabel" text="Sort By:" />
					<DropDown id="SortByDropDown">
						<Label text="Newest" />
						<Label text="Price" />
						<Label text="Alphabetical" />
					</DropDown>
				</Panel>

				<DelayLoadList id="SearchResults" itemwidth="214px" itemheight="244px">
					<!-- Filled in dynamically -->
				</DelayLoadList>

			</Panel>
		</Panel>
		

		
		
	</DOTAStoreBrowsePage>

</root>
