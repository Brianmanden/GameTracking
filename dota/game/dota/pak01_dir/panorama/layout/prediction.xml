<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_season_pass.vcss_c" />
		<include src="s2r://panorama/styles/prediction.vcss_c" />

	</styles>



	<Prediction class="Prediction">
    <Panel class="XPCircle">
      <Label class="PredictionReward" text="{i:reward}"/>
      <Panel class="PTS"/>
    </Panel>
    <Panel class="CompletedPanel">
      <Panel class="CompletedBackground" />
      <Panel class="CheckMark" />
    </Panel> 
    <Panel id ="PredictionContainer">

    
      <Panel id="Picker" class="Unselected" onactivate="DOTAPredictionPopup()">
            <Label id="UnselectedMark" text="?" />
      </Panel>
      <Label id="Choice" text="{s:choice}"/>
      <Label id="Question" text="{s:question}" html="true"/>
      <Button id="MakePrediction" class ="PopupButton Unselected" onactivate="DOTAPredictionPopup()">
        <Label class="MakeLabel" text="#DOTA_Compendium_MakePrediction"/>
        <Label class="ChangeLabel" text="#DOTA_Compendium_ChangePrediction"/>
      </Button>
      <Panel id="Ranking">
        <Button id="RevealStandings" onactivate="ToggleStyle( PredictionContainer, ShowingStandings )">
          <Label text="#DOTA_Compendium_RevealStandings"/>
        </Button>
        <Button id="HideStandings" onactivate="ToggleStyle( PredictionContainer, ShowingStandings )">
          <Label text="#DOTA_Compendium_HideStandings"/>
        </Button>
        <Panel id="PredictionLines"/>
      </Panel>
    </Panel>
	</Prediction>



</root>
