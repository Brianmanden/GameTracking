<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hudstyles.vcss_c" />
		<include src="s2r://panorama/styles/dota_hud_ti_onstage_overlay.vcss_c" />
	</styles>
	<DOTATIOnstageOverlay >
		<Panel class="TopBottomFlow">
			<!-- <Panel id="HomeTeamLogo" class="TeamLogo" /> -->
			<DOTAScenePanel id="HomeTeamLogo" class="TeamLogoModel" map="scenes/events/ti6/team_1375614.vmap"/>
			<Label text="Home Team Stage Left" class="DevLabel" />
			<Label text="Away Team Stage Right" class="DevLabel" />
			<!-- <Panel id="AwayTeamLogo" class="TeamLogo" /> -->
			<DOTAScenePanel id="AwayTeamLogo" rotateonhover="true" class="TeamLogoModel" map="scenes/events/ti6/team_1375614.vmap"/>
		</Panel>

		<Panel class="PickInfoContainer">

			<Panel id="StageTopPickInfo" class="PickInfo">
				<Panel id="StageTopPickArrowLeft" class="PickArrow" />
				<Panel id="StageTopPickArrowRight" class="PickArrow" />
				<Label id="StageTopPickLabel" text="{s:pick_phase}" />
				<Label id="StageTopPickTimer" class="PickTimer" text="{s:timer}" />
				<Label id="StageTopBonusLabel" class="BonusTime" text="Reserve Time" />
				<Label text="Stage Top" class="DevLabel"/>

			</Panel>

			<Panel id="StageBottomPickInfo" class="PickInfo">
				<Panel id="StageBottomPickArrowLeft" class="PickArrow" />
				<Panel id="StageBottomPickArrowRight" class="PickArrow" />
				<Label id="StageBottomPickLabel" text="{s:pick_phase}" />
				<Label id="StageBottomPickTimer" class="PickTimer"  text="{s:timer}" />
				<Label id="StageBottomBonusLabel" class="BonusTime" text="Reserve Time" />
				<Label text="Stage Bottom" class="DevLabel"/>
			</Panel>

		</Panel>

		<Panel id="SeriesInfo">
			
			<Label text="Game 2" />
			<Label text="Alliance Leads 1 - 0" />

		</Panel>

	</DOTATIOnstageOverlay>
</root>


