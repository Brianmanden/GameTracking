<root>
	<styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_purchase_item.vcss_c" />
  </styles>

  <Panel class="PopupPanel Hidden" popupbackground="dim">
    <Label class="PopupTitle" text="#DOTA_Purchase_Popup_Title" />
    <Panel class="MessagePanel" >
      <Panel class="ImageContainer" >
        <DOTAEconItemImage id="EconItemImage" scaling="stretch-to-fit-y-preserve-aspect" />
      </Panel>
      <Label class="MessageLabel" text="#DOTA_Purchase_Popup_Body" html="true" />
    </Panel>
    <Panel id="ButtonContainer" class="PopupButtonRow">
			<Button class="Purchase PurchaseItemButton" onactivate="DOTAPopupPurchaseItem( true )">
				<Label class="PurchaseButtonLabel" text="#DOTA_Purchase_Popup_Purchase_Button" />
				<Label class="PurchaseOnSale" text="#DOTA_Purchase_Popup_SaleAmount" />
				<Label class="PurchaseOnSale RegularPriceLabel" text="#DOTA_Purchase_Popup_RegularSetPrice" />
				<Label class="PurchasePrice" text="#DOTA_Purchase_Popup_SetPrice" />
			</Button>
      <Panel class="Spacer" />
      <Button class="Cancel PurchaseItemButton" onactivate="DOTAPopupPurchaseItem( false )" >
	    	<Label text="#DOTA_Cancel" />
			</Button>
    </Panel>
  </Panel>
</root>
