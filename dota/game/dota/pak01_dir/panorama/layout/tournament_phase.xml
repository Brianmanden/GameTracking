<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/tournament_phase.vcss_c" />
	</styles>

	<TournamentPhase>

		<Panel id="Header">
			<Label id="PhaseDates" text="November 16-21, 2015" />
            <Panel id="HeaderButtons">
				<RadioButton id="ButtonBracket" class="TournamentViewButton" onactivate="DOTATournamentPhaseSelectTab( 4 )" group="TournamentViewSelector">
					<Label text="#DOTATournamentDetailsBracket"/>
				</RadioButton>
				<RadioButton id="ButtonStandings" class="TournamentViewButton" onactivate="DOTATournamentPhaseSelectTab( 1 )" group="TournamentViewSelector">
					<Label text="#DOTATournamentDetailsStandings"/>
				</RadioButton>
				<RadioButton id="ButtonSchedule" class="TournamentViewButton" onactivate="DOTATournamentPhaseSelectTab( 2 )" group="TournamentViewSelector">
					<Label text="#DOTATournamentDetailsSchedule"/>
				</RadioButton>
				<RadioButton id="ButtonMatchGrid" class="TournamentViewButton" onactivate="DOTATournamentPhaseSelectTab( 3 )" group="TournamentViewSelector">
					<Label text="#DOTATournamentDetailsGrid"/>
				</RadioButton>
			</Panel>
		</Panel>

		<Panel id="InfoPanels">

			<Panel id="StandingsPanel" class="PhaseView">
				<!-- Dynamic stuff in here -->
			</Panel>

			<Panel id="SchedulePanel" class="PhaseView">
				<!-- Dynamic stuff in here -->
			</Panel>"
		
			<Panel id="MatchGridPanel" class="PhaseView">
				<!-- Dynamic stuff in here -->
			</Panel>

			<DragZoom id="BracketPanel" class="PhaseView" extra-zoomout="1.1">
				<!-- Dynamic stuff in here -->
			</DragZoom>

		</Panel>

	</TournamentPhase>
</root>
