<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/spring2016/comp_manila2016_pages.vcss_c" />
	</styles>

	<script>
	</script>

	<snippets>
		<snippet name="PlayerCardContainer">
			<Panel class="TopBottomFlow">
				<DOTAPlayerCard id="PlayerCard"/>
				<Label class="ScoreLabel" text="Score:"/>
				<Label class="ScoreValue" text="12.3"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTACompManila2016FantasyPage class="DashboardPage" hittest="false">
		<Panel id="CompendiumBody" class="CompendiumBody">

			<Panel id="SubpageSelectorContainer">
				<RadioButton class="TournamentViewButton" group="FantasyPageSelector" selected="true" onactivate="DOTAShowCompManila2016FantasyPage( 0, 0 )">
					<Label text="Rules"/>
				</RadioButton>
				<Label text="   / "/>
				<RadioButton class="TournamentViewButton" group="FantasyPageSelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 0 )">
					<Label text="Game"/>
				</RadioButton>
			</Panel>


			<Panel id="RulesContainer">
				<Label text="RULES"/>
				<Label text="Slot player cards into days, they'll earn points for doing things."/>
			</Panel>
			
			
			<Panel id="GameContainer">
				<Panel id="DaysContainer">
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 0 )" selected="true"><Label text="August 3"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 1 )"><Label text="August 4"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 2 )"><Label text="August 5"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 3 )"><Label text="August 8"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 4 )"><Label text="August 9"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 5 )"><Label text="August 10"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 6 )"><Label text="August 11"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 7 )"><Label text="August 12"/></RadioButton>
					<RadioButton class="DaySelector" onactivate="DOTAShowCompManila2016FantasyPage( 1, 8 )"><Label text="August 13"/></RadioButton>
				</Panel>

				<Panel id="CardHeader">
					<Image src="s2r://panorama/images/control_icons/bracket_right_down_png.vtex"/>
					<Image id="hbar_core_left" src="s2r://panorama/images/control_icons/bracket_horizontal_png.vtex"/>
					<Label text="Cores"/>
					<Image id="hbar_core_right" src="s2r://panorama/images/control_icons/bracket_horizontal_png.vtex"/>
					<Image src="s2r://panorama/images/control_icons/bracket_left_down_png.vtex"/>
					<Image id="hbar_support_bracket_left" src="s2r://panorama/images/control_icons/bracket_right_down_png.vtex"/>
					<Image id="hbar_support_left" src="s2r://panorama/images/control_icons/bracket_horizontal_png.vtex"/>
					<Label text="Supports"/>
					<Image id="hbar_support_right" src="s2r://panorama/images/control_icons/bracket_horizontal_png.vtex"/>
					<Image src="s2r://panorama/images/control_icons/bracket_left_down_png.vtex"/>
				</Panel>

				<Carousel id="PlayersCarousel" class="SingleItemCarousel" panels-visible="1">
					<Panel id="Roster0" class="PlayerCardsRoster" acceptsfocus="true"/>  <!-- These are dynamically filled with PlayerCardContainer snippets -->
					<Panel id="Roster1" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster2" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster3" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster4" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster5" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster6" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster7" class="PlayerCardsRoster" acceptsfocus="true"/>
					<Panel id="Roster8" class="PlayerCardsRoster" acceptsfocus="true"/>
				</Carousel>
			
				<Image id="separator" src="s2r://panorama/images/control_icons/bracket_horizontal_png.vtex"/>
				
				<Panel id="TotalScoreContainer">
					<Label text="Total Score: {i:score}"/>
				</Panel>
				
			</Panel>
			
			
		</Panel>		
	</DOTACompManila2016FantasyPage>
</root>
